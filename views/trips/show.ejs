<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Two Wheels Trip</p>
            
            
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= trip.image %>">
                <div class="caption-full">
                    <h4 class="pull-right"><%= trip.distance %> miles ride</h4>
                    <h4><a><%=trip.name%></a></h4>
                    <p><%= trip.description %></p>
                    <p>
                           <em>Submitted By <%= trip.author.username %>, <%= moment(trip.createdAt).fromNow() %></em>
                            
                        </p>
                        <% if(currentUser && trip.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                            <a class="btn btn-warning" href="/trips/<%= trip._id %>/edit">Edit</a>

                            <form id="delete-form" action="/trips/<%= trip._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        <% }%>
                </div>
            </div>

            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/trips/<%= trip._id %>/comments/new">Add New Comment</a>
                </div>
                
                
                
                

                <% trip.comments.forEach(function(comment){ %>


                    <div class="row">
                        
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            
                            <p>
                                <%= comment.text %>
                            </p>

                        </div>
                    </div>
                    
              <% })%>

              


            </div>
        </div>
        
    </div>
</div>





<% include ../partials/footer %>
